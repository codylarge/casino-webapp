<script src="../scripts/nav.js"></script>
<style>
  ul {
    align-items: center;
  }

  #money {
    font-family: "Kode Mono", monospace;
    padding-inline: 10px;
    color: white;
    font-size: 4em;
    color: limegreen;
    font-weight: bold;
    text-shadow: 3px 3px 5px #000;
  }

  .main-nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-image: linear-gradient(
      to top left,
      rgba(6, 0, 37, 0.5),
      rgba(239, 236, 255, 0.5) 300%
    ); /* Adjust direction and colors as needed */
    border-radius: 5px;
    padding: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.3); /* Shadow for depth */
    margin: 20px;
  }

  .page-title {
    padding-left: 25px;
    font-weight: bold;
    font-size: 2.5em;
    text-shadow: 2px 2px 3px #000;
  }
  .main-nav-links {
    list-style: none;
    display: flex;
    gap: 20px; /* Adjust the gap between navigation links */
    padding: 0;
  }

  .main-nav-links a:hover,
  .main-nav-links a:focus {
    color: orangered;
    background-color: rgb(255, 255, 119);
    transform: scale(1.2); /* Example transform: increase scale on hover */
  }

  .main-nav-links a {
    /* Text */
    font-family: Arial, Helvetica, sans-serif;
    font-size: 1.25rem;
    font-weight: bold;
    color: black;
    text-decoration: none;
    text-transform: uppercase;

    /* Decoration */
    border: 2px solid #000;
    background-color: rgb(255, 255, 69);
    box-shadow: inset 0 0 15px 5px rgb(255, 255, 194); /* Adjust shadow properties as needed */

    /* Tranformation */
    transform-origin: center; /* Set the transform origin to the center */
    display: inline-block; /* Ensures the anchor tags behave like block elements */
    padding: 15px 30px; /* Adjust padding for each link */
    transition: all 0.3s ease;
  }

  .main-nav-link {
    margin-right: 10px;
    text-decoration: none;
    color: #fff;
    margin-left: 15px;
  }

  .hamburger {
    display: none;
    cursor: pointer;
  }

  .line {
    width: 30px;
    height: 3px;
    background-color: #ccc;
    margin: 5px 0;
  }

  @media screen and (max-width: 1000px) {
    .main-nav-links {
      display: none;
    }

    .hamburger {
      display: block;
      padding-inline: 25px;
    }
  }
</style>
