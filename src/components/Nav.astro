<nav class="main-nav">
  <div id="money"></div>
  <ul class="main-nav-links">
    <li><a href="/" class="main-nav-link">Home</a></li>
    <li><a href="/wheel" class="main-nav-link">Wheel</a></li>
    <li><a href="/blackjack" class="main-nav-link">Blackjack</a></li>
    <li><a href="/horses" class="main-nav-link">Races</a></li>
