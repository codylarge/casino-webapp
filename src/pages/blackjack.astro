---
import Layout from "../layouts/Layout.astro";
import BlackjackMenu from "../components/BlackjackMenu.astro";
import BlackjackEndScreen from "../components/BlackjackEndScreen.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <div id="betting-menu">
    <BlackjackMenu  />
  </div>
  <div id="game-container" style="display: none">
    <div class="hands-container">
      <div class="dealer-hand">
        <h3 id="dealer-total" class="hand-title">Dealer's Hand:</h3>
        <div class="cards-container"></div>
      </div>
      <div class="button-container">
        <button id="hit" style="display: none">HIT</button>
        <button id="stand" style="display: none">STAY</button>
      </div>
      <div id="end-game-screen" style="display: none">
        <BlackjackEndScreen  />
      </div>
      <div class="player-hand">
        <h3 id="player-total" class="hand-title">Your Hand:</h3>
        <div class="cards-container"></div>
      </div>
    </div>
  </div>
  <style>
    .hands-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      height: 100vh;
      justify-content: space-around;
    }

    .dealer-hand,
    .player-hand {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 100%;
    }

    .hand-title {
      margin-bottom: 10px;
      margin-top: 10px;
      color: white;
    }

    .cards-container {
      display: flex;
      justify-content: center;
    }

    .cards-container img {
      margin: 0 5px; /* Space between cards */
    }

    h1 {
      color: red;
      text-align: center;
      margin-bottom: 20px;
    }

      /* Container styling */
  .button-container {
    display: flex;
    gap: 10px;
    justify-content: center;
    align-items: center;
    margin-top: 20px;
  }

  /* Button styling */
  button {
    padding: 10px 20px;
    font-size: 16px;
    font-weight: bold;
    border: 2px solid #007BFF;
    border-radius: 5px;
    background-color: #007BFF;
    color: white;
    cursor: pointer;
    transition: background-color 0.3s, transform 0.2s;
  }

  /* Button hover effect */
  button:hover {
    background-color: #0056b3;
    transform: scale(1.05);
  }

  /* Button active effect */
  button:active {
    background-color: #003f7f;
    transform: scale(0.95);
  }
  </style>
  <script src="../scripts/preload.js"></script>
  <script src="../scripts/blackjack.js"></script></Layout
>
