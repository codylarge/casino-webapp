---
import Layout from "../layouts/Layout.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <div class="hands-container">
    <div class="hands-container">
      <div class="dealer-hand">
        <h3 class="hand-title">Dealer's Hand:</h3>
        <div class="cards-container"></div>
      </div>
      <button class="play">PLAY</button>
      <div class="player-hand">
        <h3 class="hand-title">Your Hand:</h3>
        <div class="cards-container"></div>
      </div>
    </div>
  </div>
  <style>
    .hands-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      height: 100vh;
      justify-content: space-around;
    }

    .dealer-hand,
    .player-hand {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 100%;
    }

    .hand-title {
      margin-bottom: 10px;
      margin-top: 10px;
      color: white;
    }

    .cards-container {
      display: flex;
      justify-content: center;
    }

    .cards-container img {
      margin: 0 5px; /* Space between cards */
    }

    h1 {
      color: red;
      text-align: center;
      margin-bottom: 20px;
    }
  </style>
  <script src="../scripts/preload.js"></script>
  <script src="../scripts/blackjack.js"></script></Layout
>
